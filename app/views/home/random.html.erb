<html>
<head>
  <script>
  function go() {
    document.getElementById("result").innerHTML = "";
    var lines = document.getElementById("in").value.split("\n");
    var nums = document.getElementById("num").value;
    if (lines.length<nums){
      document.getElementById("result").innerHTML = "抽太多隻囉!";
      return;
    }
    var rannum = getRandomArray(lines.length,nums);
    if(document.getElementById("cb").checked){
      for(var i = 0 ; i < nums ; i++){
        document.getElementById("result").innerHTML += ((i+1).toString() + ". " + lines[rannum[i]] + "<br>")
      }
    }
    else{
      for(var i = 0 ; i < nums ; i++){
        document.getElementById("result").innerHTML += (lines[rannum[i]] + "<br>")
      }
    }
  }
  function getRandomArray(num, n) {  //隨機產生不重覆的n個數字
  var rdmArray = [n];   //儲存產生的陣列
 
  for(var i=0; i<n; i++) {
    var rdm = 0;    //暫存的亂數
 
    do {
      var exist = false;      //此亂數是否已存在
      rdm = Math.floor(Math.random() * num);  //取得亂數
 
      //檢查亂數是否存在於陣列中，若存在則繼續回圈
      if(rdmArray.indexOf(rdm) != -1) exist = true;
 
    } while (exist);  //產生沒出現過的亂數時離開迴圈
 
    rdmArray[i] = rdm;
  }
  return rdmArray;
  }
  </script>
</head>
<body>

  <textarea rows="4" cols="50" id="in">
    輸入要抽籤的內容，每行一筆</textarea>
  <br>
  <p>
    抽取
    <input type="text" id="num" size="1">
    隻籤
  </p>
  <p>
    <input type="checkbox" id="cb" checked>排序
  </p>
  <button onclick="go()">抽籤</button>
  
  <br>
	<p id="result"></p>
</body>
</html>
